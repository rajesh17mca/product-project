<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="TRACE">

    <Properties>
        <Property name="LOG_PATTERN">
            %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
        </Property>
        <Property name="LOG_DIR">/Users/rajeshreddy/Downloads/Learning/workspace/java_workspace/application-logs/</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- <PatternLayout pattern="${LOG_PATTERN} [URI: %X{uri}, URL: %X{url}]"/> -->
            <JSONLayout compact="true" eventEol="true" includeTimeMillis="true" properties="false" flattenProperties="true" completeOldLogEvent="true">
                <KeyValuePair key="timestamp" value="$${date:yyyy-MM-dd'T'HH:mm:ss.SSSZ}" />
                <KeyValuePair key="uri" value="$${ctx:uri:-}"/>
                <KeyValuePair key="url" value="$${ctx:url:-}"/>
                <KeyValuePair key="action" value="$${ctx:action:-}"/>
                <KeyValuePair key="transactionId" value="$${ctx:transactionId:-}"/>
                <KeyValuePair key="durationMs" value="$${ctx:durationMs:-}"/>
            </JSONLayout>
        </Console>

        <RollingFile name="FileAppender"
                     fileName="${LOG_DIR}/application.log"
                     filePattern="${LOG_DIR}/application-%d{yyyy-MM-dd}-%i.log.gz">
            <!-- <PatternLayout pattern="${LOG_PATTERN}"/> -->
            <JSONLayout compact="true" eventEol="true" includeTimeMillis="true" properties="false" flattenProperties="true" completeOldLogEvent="true">
                <KeyValuePair key="timestamp" value="$${date:yyyy-MM-dd'T'HH:mm:ss.SSSZ}" />
                <KeyValuePair key="uri" value="$${ctx:uri:-}"/>
                <KeyValuePair key="url" value="$${ctx:url:-}"/>
                <KeyValuePair key="action" value="$${ctx:action:-}"/>
                <KeyValuePair key="transactionId" value="$${ctx:transactionId:-}"/>
                <KeyValuePair key="durationMs" value="$${ctx:durationMs:-}"/>
            </JSONLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="com.rajesh.product" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>
        <Logger name="org.springframework" level="INFO"/>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>
